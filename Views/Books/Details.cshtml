@model Book

<h2>Book Details</h2>
<table class="table">
    <tr>
        <td>Title:</td>
        <td>@Model.Title</td>
    </tr>
    <tr>
        <td>Author:</td>
        <td>@Model.Author</td>
    </tr>
    <tr>
        <td>ISBN:</td>
        <td>@Model.ISBN</td>
    </tr>
    <tr>
        <td>Published Date:</td>
        <td>@Model.PublishedDate.ToShortDateString()</td>
    </tr>
    <tr>
        <td>Genre:</td>
        <td>@Model.Genre</td>
    </tr>
</table>
<a href="/Books/Edit/@Model.Id">Edit</a> |
<a href="/Books">Back to List</a>
